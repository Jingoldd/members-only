<h1>Testing Index</h1>

<% @posts.each do |post| %>
  <%= post.title %> <br>
  <%= post.body %> <br>
  <% if user_signed_in? %>
    by <%= post.user.email %> <br>
  <% end %>
  <br><br>
<% end %>

<% if user_signed_in? %> 
  <%= link_to 'Create new post', new_post_path %>
  <br>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'Sign Up', new_user_registration_path %> for create new posts!
  <br>
  Or <%= link_to 'Log In', new_user_session_path %>!
<% end %>