<%= form_with model: @post, local: true do |form| %>
  <%= form.label :title, "Add a title:", class: "label" %>
  <%= form.text_field :title, class: "input" %> <br><br>
  <%= form.text_area :body, placeholder: "Your post here...", class: "textarea" %> <br><br>
  <%= form.submit class: "button is-link" %>
<% end %>